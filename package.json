{
  "name": "dungeonmaestro-soundboard",
  "version": "1.0.0",
  "description": "A cozy soundboard application for DM's built using Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --x64 --win --config.win.artifactName=${productName}-Setup-${version}.${ext} --config.win.publisherName=\"Your Name\" --config.nsis.oneClick=false --config.nsis.allowToChangeInstallationDirectory=true --config.nsis.runAfterFinish=false --publish never"
  },
  "author": "Gabe Lytle",
  "license": "ISC",
  "build": {
    "appId": "https://github.com/GooberGabe/DungeonMaestro",
    "productName": "DungeonMaestro",
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio"
    }
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^8.7.0"
  }
}
