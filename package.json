{
  "name": "dungeonmaestro-soundboard",
  "version": "1.0.1",
  "description": "A cozy soundboard application for DM's built using Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --x64 --win --config.win.artifactName=${productName}-Setup-${version}.${ext} --config.win.publisherName=\"Gabe Lytle\" --config.nsis.oneClick=false --config.nsis.allowToChangeInstallationDirectory=true --config.nsis.runAfterFinish=false --publish never"
  },
  "author": "Gabe Lytle",
  "license": "ISC",
  "build": {
    "appId": "https://github.com/GooberGabe/DungeonMaestro",
    "productName": "DungeonMaestro",
    "icon": "assets/logo.ico",
    "publish": {
      "provider": "github",
      "owner": "GooberGabe",
      "repo": "DungeonMaestro"
    },
    "win": {
      "target": ["portable"],
      "icon": "assets/logo.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/logo.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/logo.png"
    }
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^8.7.0",
    "electron-updater": "^6.2.1"
  }
}

